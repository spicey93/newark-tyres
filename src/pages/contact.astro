---
import MainLayout from "../layouts/MainLayout.astro";
import Heading from "../components/Heading.astro";
const phoneNo = import.meta.env.PHONE_NO;
const pageTitle = "Contact"
const description = "Reach out to Newark Tyres effortlessly through our contact page. Whether you have questions or need to schedule a mobile tyre fitting, our team is here to assist you. Get in touch and keep your journey moving smoothly with Newark Tyres."
---

<MainLayout pageTitle={pageTitle} description={description}>
    <Heading mainHeading="Contact" />
    <main>
        <div class="container my-5">
            <p>If you'd like to get a quote for one or more of our services, or if you have a question, please feel free to get in touch! We aim to respond to any enquires within a 24 hour period. If you need urgent assistance, give us a call instead on <a href=`tel:${phoneNo}`>{`${phoneNo.substr(0,5)} ${phoneNo.substr(5,2)} ${phoneNo.substr(7,2)} ${phoneNo.substr(9,2)}`</a>.</p>
            <form action="/contact" method="post" class="">
                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name*</label>
                            <input type="text" class="form-control" required name="name">
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="mb-3">
                            <label for="reg" class="form-label">Vehicle Registration*</label>
                            <input type="text" class="form-control" required name="reg">
                        </div>
                    </div>
                    <div class="col-12 col-md-6">

                        <div class="mb-3">
                            <label for="tel" class="form-label">Tel*</label>
                            <input type="tel" class="form-control" required name="tel">
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control">
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="mb-3">
                            <label for="message" class="form-label">Message</label>
                            <textarea name="message" id="message" cols="30" rows="4" class="form-control"></textarea>
                        </div>
                    </div>
                </div>
                <div class="d-grid">
                    <button class="btn btn-primary">Send</button>
                </div>
            </form>
        </div>
    </main>
</MainLayout>
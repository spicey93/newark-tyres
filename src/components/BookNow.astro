---
export interface Props {
    id: String,
    headline: String,
    tagline: String,
}

const { id, headline, tagline } = Astro.props;
---


<section class="bg-light vh-50 d-flex align-items-center text-center bg-overlay py-5" id=`${id}`>
    <div class="container">

        <h2 class="display-1 text-light">{headline}</h2>
        <p class="mb-0 fs-5 text-light">{tagline}
        </p>
        <div class="col-12 col-md-8 offset-md-2 col-lg-4 offset-lg-4">
            <form action="https://mobiletyrebookings-5e066c48bbce.herokuapp.com" method="post" class="mb-3 text-center">
                <h5 class="mb-3 text-light mt-5 fs-3">Get a Quote</h5>
                <div class="input-group">
                    <input type="text" class="form-control text-center font-monospace fw-bold text-uppercase bg-warning border border-warning fs-3" name="vrm" placeholder="Enter Reg" required>
                    <button class="btn btn-success fw-bold font-monospace fs-3 text-uppercase rounded-end" type="submit" id="lookUpVRMBtn">Go</button>
                </div>
            </form>
        </div>
   

    </div>

</section>


<script>
    const lookUpVRMBtn = document.getElementById("lookUpVRMBtn")
    lookUpVRMBtn.addEventListener("submit", (e) => {
        lookUpVRMBtn.innerHTML = `<div class="spinner-border" role="status"></div>`
    })
</script>